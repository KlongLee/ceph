[Unit]
Description=Map RBD devices

After=network-online.target local-fs.target
Wants=network-online.target local-fs.target

[Service]
EnvironmentFile=-/etc/sysconfig/ceph
Environment=RBDMAPFILE=/etc/ceph/rbdmap
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/usr/lib/systemd/system/check_rdma.sh %n
ExecStart=/usr/bin/rbdmap map
ExecReload=/usr/bin/rbdmap map
ExecStop=/usr/bin/rbdmap unmap-all
ExecStopPost=/usr/lib/systemd/system/check_rdma.sh %n clean

[Install]
WantedBy=multi-user.target
