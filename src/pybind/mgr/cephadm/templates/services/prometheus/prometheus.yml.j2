# {{ cephadm_managed }}
global:
  scrape_interval: 10s
  evaluation_interval: 10s
rule_files:
  - /etc/prometheus/alerting/*


{% macro monitoring_stack(basic_auth=false, url) -%}
{% if secure_monitoring_stack %}
    - scheme: https
{% if basic_auth %}
      basic_auth:
        username: {{ alertmanager_web_user }}
        password: {{ alertmanager_web_password }}
{%endif %}
      tls_config:
        ca_file: root_cert.pem
      http_sd_configs:
        - url: {{ url }}
          basic_auth:
            username: {{ service_discovery_username }}
            password: {{ service_discovery_password }}
          tls_config:
            ca_file: root_cert.pem
{% else %}
    - scheme: http
      http_sd_configs:
        - url: {{ url }}
{% endif %}
{%- endmacro %}

{% if alertmanager_sd_url %}
alerting:
  alertmanagers:
{{ monitoring_stack(basic_auth=true, url=alertmanager_sd_url) }}
{% endif %}

scrape_configs:
  - job_name: 'ceph'
{% if secure_monitoring_stack %}
    scheme: https
    tls_config:
      ca_file: mgr_prometheus_cert.pem
    honor_labels: true
    http_sd_configs:
    - url: {{ mgr_prometheus_sd_url }}
      basic_auth:
        username: {{ service_discovery_username }}
        password: {{ service_discovery_password }}
      tls_config:
        ca_file: root_cert.pem
{% else %}
    honor_labels: true
    http_sd_configs:
    - url: {{ mgr_prometheus_sd_url }}
{% endif %}

{% if node_exporter_sd_url %}
  - job_name: 'node'
{{ monitoring_stack(url=node_exporter_sd_url) }}
{% endif %}

{% if haproxy_sd_url %}
  - job_name: 'haproxy'
{{ monitoring_stack(url=haproxy_sd_url) }}
{% endif %}

{% if ceph_exporter_sd_url %}
  - job_name: 'ceph-exporter'
{{ monitoring_stack(url=ceph_exporter_sd_url) }}
{% endif %}